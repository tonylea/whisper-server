# Whisper Server Configuration

# Model configuration
WHISPER_MODEL=medium.en
# Available models: tiny, tiny.en, base, base.en, small, small.en, medium, medium.en, large-v1, large-v2, large-v3

# Device configuration
DEVICE=cpu
# Options: cpu, cuda (requires NVIDIA GPU)

# Compute type
COMPUTE_TYPE=int8
# Options: int8, int8_float16, int16, float16, float32

# Output directory for transcriptions
OUTPUT_DIR=/transcription/output

# Server configuration
PORT=8000
HOST=0.0.0.0
